service cloud.firestore {
  match /databases/{database}/documents {
 	 match /{collectionName}/{documentId} {
     allow read, write : if collectionName == "settings" 
                         && request.auth != null 
                         && request.auth.token.firebase.sign_in_provider != 'anonymous' 
                         && request.auth.token.readmeMember == true;
     allow read, write : if collectionName == "articles" 
                         && request.auth != null 
                         && request.auth.token.firebase.sign_in_provider != 'anonymous' 
                         && request.auth.token.readmeMember == true;
		}
    match /{document=**} {
      allow read, write: if false;
    }
  }
}